---
import posts from "@/lib/fixtures/instagram_posts.json";
---

<div>
  <a
    href="https://www.teacherspayteachers.com/store/ciaras-classroom"
    class="mt-4 inline-block text-center hover:text-primary text-white/75 rounded-lg p-3"
  >
    Recent Instagram Posts
  </a>

  <div class="grid grid-cols-2 gap-2">
    {
      posts.map((post) => (
        <a href={post.postUrl} target="_blank" rel="noopener noreferrer" class="group flex justify-center">
          <div class="w-[70%] pt-[70%] relative overflow-hidden rounded-lg shadow-md">
            <img
              src={post.imageUrl}
              alt={post.caption}
              class="absolute top-0 left-0 w-full h-full object-cover transition-transform duration-300 transform group-hover:scale-110"
            />
          </div>
        </a>
      ))
    }
  </div>
</div>
