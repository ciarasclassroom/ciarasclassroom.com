---
// Define props for the product component
const { imageUrl, title, description, price, link } = Astro.props;
---

<a
  href={link}
  class="block bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300"
>
  <img src={imageUrl} alt={title} class="w-full h-48 object-cover" />
  <div class="p-4">
    <h2 class="text-xl font-semibold mb-2">{title}</h2>
    <p class="text-gray-600 mb-4">{description}</p>
    <span class="block text-lg font-bold text-gray-900">{price}</span>
  </div>
</a>
