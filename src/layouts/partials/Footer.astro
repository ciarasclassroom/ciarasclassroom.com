---
import InstagramWidget from "@/components/InstagramWidget.astro";
import Social from "@/components/Social.astro";
import TptWidget from "@/components/TptWidget.astro";

import menu from "@/config/menu.json";
import social from "@/config/social.json";
const today = new Date();
---

<footer class="section bg-theme-dark">
  <div class="container text-center">
    <div
      class="max-w-6xl mx-auto grid grid-cols-1 sm:grid-cols-3 gap-8 px-4 mb-4"
    >
      <InstagramWidget />
      <TptWidget />

      <div class="flex flex-col items-center">
        <div
          class="mt-4 inline-block text-center hover:text-primary text-white/75 rounded-lg p-3"
        >
          Find me online
        </div>
        <Social source={social} className="social-icons" />
      </div>
    </div>

    <div>
      {/* copyright */}
      <p class="text-white/75">
        &copy; {today.getFullYear()} Ciara's Classroom
      </p>
    </div>
  </div>
</footer>
